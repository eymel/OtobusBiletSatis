
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_Layout.cshtml";
}

<section id="homem">
    <div class="row">
        <form action="@Url.Action("Index","Schedule")" method="post">
            <div class="col-md-4 col-md-offset-2">
                <div class="ticketSearch">
                    <h2>Bilet Ara</h2>
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="form-group c-search">
                                <h1>Kalkış Yeri</h1>
                                <input name="kalkıs" type="text" class="form-control" id="city-search">

                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-xs-12">
                            <div class="form-group c-search">
                                <h1>Varış Yeri</h1>
                                <input name="varıs" type="text" class="form-control" id="contact-list-search">

                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="form-group c-search">
                                <h1>Yolculuk Tarihi</h1>
                                <div class="col-md-10">

                                    <input name="tarih" type="text" class="form-control" id="contact-list-search">
                                </div>
                                <span class="input-group-btn">
                                    <button class="btn btn-default"  type="button"><span class="glyphicon glyphicon-calendar text-muted"></span></button>
                                </span>
                            </div>

                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="form-group c-search">

                                <span class="input-group-btn">
                                    <button class="btn btn-default" id="search" type="submit"><span class="glyphicon glyphicon-search text-muted">Ara</span></button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
    
