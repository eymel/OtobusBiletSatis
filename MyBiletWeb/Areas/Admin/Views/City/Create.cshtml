@model Entity.City
@using FluentValidation.Results;
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="col-md-6">
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">City Add</h3>
        </div>
        @if (TempData["success"] != null)
        {
            if ((bool)TempData["success"])
            {
                <div class="callout callout-success">
                    <h4>Succesfully</h4>
                </div>

            }
            else
            {
                <div class="callout callout-danger">
                    <h4>Failed</h4>
                </div>
            }
        }
        @if (TempData["error"] != null)
        {
            <div class="callout callout-warning">
                <h4>Warning!</h4>
                <p>
                    @foreach (var item in (IList<ValidationFailure>)TempData["error"])
                {
                        @item.ErrorMessage;
                        <br />
                    }
                </p>
            </div>
        }


        <!-- /.box-header -->
        <!-- form start -->
        <form action="@Url.Action("Create","City")" method="post" class="form-horizontal">

            <div class="box-body">
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">City Name</label>

                    <div class="col-sm-10">
                        <input type="text" name="CityName" class="form-control" id="inputEmail3" placeholder="City Name">
                    </div>
                </div>
                

            </div>
            <!-- /.box-body -->
            <div class="box-footer">

                <button type="submit" class="btn btn-info pull-right">Ekle</button>
            </div>
            <!-- /.box-footer -->
        </form>
    </div>
</div>